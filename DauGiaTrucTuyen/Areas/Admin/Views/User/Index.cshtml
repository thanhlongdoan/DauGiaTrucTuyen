@model IEnumerable<DauGiaTrucTuyen.Areas.Admin.Models.ManagerUserViewModel.ListUserViewModel>

@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int counter = 0;
}

<div class="panel panel-primary">
    <div class="panel-heading">Danh sách người dùng</div>
    <div class="panel-body">
        <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.Raw(++counter)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            <a href="@Url.Action("Handle", new { id = item.Id })"><i class="fas fa-lock-open"></i></a>
                            <a href="@Url.Action("Detail", new { id = item.Id })"><i class="fas fa-info-circle"></i></a>
                            <a id="js_btnDelete" href="javascript:;" data-id="@item.Id"><i class="fas fa-trash text-danger"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script src="~/Content/Admin/Scripts/reponsive-table.js"></script>
    <script src="~/Content/Admin/Scripts/delete/delete-user.js"></script>
}

