@model IEnumerable<DauGiaTrucTuyen.Areas.Admin.Models.ListCategoryViewModel>

@{
    /**/

    ViewBag.Title = "Danh sách danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">Danh sách danh mục sản phẩm</div>
    <div class="panel-body">
        <a href="@Url.Action("Create")" class="btn btn-success">Thêm mới danh mục</a>
    </div>
    <div class="panel-body">
        <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.StatusCategory)
                    </th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusCategory)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Categorys_Id })"><i class="fas fa-edit"></i></a>
                            <a href="@Url.Action("Details", new { id = item.Categorys_Id })"><i class="fas fa-info-circle"></i></a>
                            <a id="js_btnDelete" href="javascript:;" data-id="@item.Categorys_Id"><i class="fas fa-trash text-danger"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script src="~/Content/Admin/Scripts/reponsive-table.js"></script>
    <script src="~/Content/Admin/Scripts/delete/delete-category.js"></script>
}