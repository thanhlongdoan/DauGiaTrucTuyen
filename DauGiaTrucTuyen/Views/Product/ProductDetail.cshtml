@model DauGiaTrucTuyen.Areas.Admin.Models.DetailProductViewModel
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Chi tiết sản phẩm đấu giá";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
@section css{
    <link href="~/Content/ClientTemplate/css/product-detail.css" rel="stylesheet" />
}
<div class="shoes-grid col-md-8 col-sm-12">
    <div class=" single_top">
        <div class="single_grid">
            <div class="row">
                <div class="grid images_3_of_2 col-md-6">
                    <img class="etalage_thumb_image img-responsive" src="@Model.Image" />
                    <div class="clearfix"> </div>
                </div>
                <div class="desc1 span_3_of_2 col-md-6">
                    <h3>@Model.ProductName</h3>
                    <br />
                    <div class="cart-b">
                        <h4 style="color: brown" id="countdown"></h4>
                        <h4 id="counter-time">@*@Model.AuctionTime s*@</h4>
                        <br />
                        <h3 id="pricing">@Model.AuctionPrice<span> K</span></h3>
                        <div class="clearfix"></div>
                    </div>
                    <br />
                    @Html.TextBoxFor(x => x.AuctionPrice, new { @autofocus = "autofocus" })
                    <input type="hidden" name="name" value="@Model.Transaction_Id" />
                    @Html.ValidationMessageFor(model => model.AuctionPrice, "", new { @class = "text-danger" })
                    <br />
                    <br />
                    <button class="btn btn-primary" id="btn-auction">Đấu giá</button>
                </div>
            </div>
        </div>
    </div>
    <h3 class="text-uppercase page-header">Mô tả chi tiết sản phẩm</h3>
    <div style="padding-left: 5%;">
        @Html.Raw(Model.Description)
    </div>
    <div class="modal fade" id="modal-register" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="width: 70%; margin: auto">
                <div class="modal-body">
                    <div id="myTabContent" class="tab-content">
                        <h3>Phiên đấu giá này đã hết thời gian</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4 col-sm-12">
    <div class="box" style="padding-top: 0% !important">
        <div class="box-header">
            <h3 class="box-title">Danh sách đấu giá sản phẩm</h3>
        </div>
        <div class="box-body no-padding">
            <table class="table table-condensed">
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Tài khoản</th>
                    <th>Số tiền</th>
                </tr>
                <tr>
                    <td>1.</td>
                    <td>Update software</td>
                    <td><span class="badge bg-red">100k</span></td>
                </tr>
                <tr>
                    <td>2.</td>
                    <td>Clean database</td>
                    <td><span class="badge bg-yellow">150k</span></td>
                </tr>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        //Js load thời gian đấu giá
        var upgradeTime = @Model.TimeRemaining;
        var seconds = upgradeTime;
        function timer() {
            var days = Math.floor(seconds / 24 / 60 / 60);
            var hoursLeft = Math.floor((seconds) - (days * 86400));
            var hours = Math.floor(hoursLeft / 3600);
            var minutesLeft = Math.floor((hoursLeft) - (hours * 3600));
            var minutes = Math.floor(minutesLeft / 60);
            var remainingSeconds = seconds % 60;
            function pad(n) {
                return (n < 10 ? "0" + n : n);
            }
            document.getElementById('countdown').innerHTML = pad(hours) + ":" + pad(minutes) + ":" + pad(remainingSeconds);
            if (seconds == 0) {
                clearInterval(countdownTimer);
                document.getElementById('countdown').innerHTML = "KẾT THÚC";
            } else {
                seconds--;
            }
        }
        var countdownTimer = setInterval('timer()', 1000);
    </script>
    <script>
        $(document).ready(function () {
            var auctionHub = $.connection.auctionHub;
            var userId = "@User.Identity.GetUserId()";
            var productId = "@Model.Products_Id";

            auctionHub.client.addMessage = function (msg) {
                console.log(msg)
            }

            //nhập giá tiền nhỏ hơn giá tiền hiện tại
            auctionHub.client.auctionError = function (error) {
                swal({
                    title: error,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "Đồng ý",
                    closeOnConfirm: false
                    }, function () {
                       location.reload();
                    });
            }

            auctionHub.client.endTime = function (msg) {
                if (msg == "End") {
                     swal({
                        title: "Phiên đấu giá này đã kết thúc !",
                        confirmButtonClass: "btn-primary",
                        confirmButtonText: "Đồng ý",
                        closeOnConfirm: false
                    }, function () {
                        location.href = "@Url.Action("Index","Home")";
                    });
                }
            }

            //phiên đấu giá kết thúc khi load
            @*auctionHub.client.joinGroupError = function (error) {
                swal({
                    title: error,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "OK",
                    closeOnConfirm: false
                }, function () {
                    location.href = "@Url.Action("Index","Home")";
                });
            }*@

            //get giá tiền khi đấu giá
            auctionHub.client.auctioning = function (price) {
                document.getElementById("pricing").innerHTML = price + "<span> K</span>";
            }

            //load thời gian từ service
            auctionHub.client.getTimeAuction = function (time) {
                if (time == "End") {
                    @*swal({
                        title: "Phiên đấu giá đã kết thúc !",
                        confirmButtonClass: "btn-primary",
                        confirmButtonText: "Đồng ý",
                        closeOnConfirm: false
                    }, function () {
                        location.href = "@Url.Action("Index","Home")";
                    });*@
                }
                else
                    document.getElementById("counter-time").innerHTML = time + " service";
            }

            $.connection.hub.start().done(function () {
                //click vào đấu giá
                $("#btn-auction").click(function () {
                    if ("@Request.IsAuthenticated" == "True") {
                        var price = $("#AuctionPrice").val();
                        auctionHub.client.auctioning = function (price) {
                            auctionHub.client.addMessage = function (msg) {
                                if (msg == "end") {
                                    swal({
                                        title: "Phiên đấu giá đã kết thúc !",
                                        confirmButtonClass: "btn-primary",
                                        confirmButtonText: "Đồng ý",
                                        closeOnConfirm: false
                                    }, function () {
                                        location.href = "@Url.Action("Index","Home")";
                                    });
                                }
                            }
                        }
                        //tham gia phiên đấu giá
                        auctionHub.server.joinAuction(productId, userId, price)
                    }
                    //click vào đấu giá nhưng chưa đăng nhập
                    else {
                        swal({
                        title: "Bạn phải đăng nhập để có thể thực hiện chức năng này !",
                        confirmButtonClass: "btn-primary",
                            confirmButtonText: "Tiến hành đăng nhập",
                        closeOnConfirm: false
                        }, function () {
                            location.href = "@Url.Action("Login","Account", new { returnUrl = Url.Action("ProductDetail", "Product", new { productId = Model.Products_Id }) })";
                        });
                    }
                });
                //tham gia phiên đấu giá khi load trang
                auctionHub.server.joinGroupAuction(productId)
                setInterval(function () {
                    auctionHub.server.endTime();
                }, 1000);
            });
        })
    </script>
}
