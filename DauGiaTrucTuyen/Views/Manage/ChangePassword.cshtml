@model DauGiaTrucTuyen.Models.ChangePasswordViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<br />
<div class="container bootstrap snippet information-user register">
    <div class="row">
        <div class="col-sm-3">
            <div class="box box-primary">
                <div class="panel panel-primary">
                    <br />
                    <div class="avt-user">
                        <h1 class="text-uppercase"></h1>
                    </div>
                    <br />
                    @*<p class="text-center"><strong>@Model.UserName</strong></p>*@
                    <br />
                    <div class="list-group box-information">
                        <a href="@Url.Action("InformationUser","Account")" class="list-group-item">Thông tin tài khoản</a>
                        <a href="@Url.Action("UpdateUser","Account")" class="list-group-item">Cập nhật thông tin tài khoản</a>
                        <a href="@Url.Action("ChangePassword","Manage")" class="list-group-item">Đổi mật khẩu</a>
                    </div>
                </div>
            </div>
        </div>


        @using (Html.BeginForm("ChangePassword", "Manage", new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="text-center">ĐỔI MẬT KHẨU</h3>
            <hr />
            <div class="col-sm-9">
                <div class="tab-content">
                    <div class="tab-pane active information">
                        <div class="col-xs-12 col-sm-6">
                            @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.OldPassword)
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.NewPassword)
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.ConfirmPassword)
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
                        <div class="update form-group">
                            <div class="col-md-4 col-md-offset-4" style="padding-top:1em;text-align:center;">
                                <input type="submit" value="Xác nhận" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".avt-user h1").text('@User.Identity.GetUserName().Substring(0,2)');
    })
</script>
