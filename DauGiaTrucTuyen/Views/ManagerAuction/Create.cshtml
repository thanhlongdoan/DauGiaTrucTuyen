@model DauGiaTrucTuyen.Areas.Admin.Models.AddProductViewModel
@{
    ViewBag.Title = "Đăng ký sản phẩm đấu giá";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

@section css{
    <link href="~/Content/ClientTemplate/css/manager-auction.css" rel="stylesheet" />
    <link href="~/Content/ClientTemplate/css/upload-img.css" rel="stylesheet" />
}
<h3 class="text-center">QUẢN LÝ ĐẤU GIÁ</h3>
<br />
<div class="shoes-grid col-md-8 col-sm-12">
    <div class="container bootstrap snippet information-user">
        <div class="row">
            <div class="col-sm-3">
                <div class="box box-primary">
                    <div class="panel panel-primary">
                        <div class="panel-heading panel-primary">Quản lý đấu giá</div>
                        <div class="list-group">
                            <a href="@Url.Action("Index","ManagerAuction")" class="list-group-item">Danh sách sản phẩm</a>
                            <a href="@Url.Action("Create","ManagerAuction")" class="list-group-item">Đăng ký sản phẩm đấu giá</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-9">
                <div class="panel panel-primary">
                    <div class="panel-heading">Đăng ký sản phẩm đấu giá</div>
                    <div class="panel-body panel-primary">
                        @using (Html.BeginForm("Create", "ManagerAuction", FormMethod.Post, new { area = "admin", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ProductName, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.ProductName)
                                        @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9 imgUp">
                                        @*<input type="file" name="file" id="file" />*@
                                        <div class="imagePreview"></div>
                                        <label class="btn btn-primary">
                                            Chọn ảnh<input type="file" name="file" id="file" class="uploadFile img" value="Upload Photo" style="width: 0px;height: 0px;overflow: hidden;">
                                        </label>
                                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "ckeditor" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.AuctionTime, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(model => model.AuctionTime, new SelectList(ViewBag.SelectedItems, "Value", "Text", null))
                                        @Html.ValidationMessageFor(model => model.AuctionTime, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.PriceStart, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.PriceStart)
                                        @Html.ValidationMessageFor(model => model.PriceStart, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.StepPrice, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.StepPrice)
                                        @Html.ValidationMessageFor(model => model.StepPrice, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Category_Id, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.DropDownList("Category_Id", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Category_Id, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" value="Đăng ký" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        }
                        <div>
                            <a href="@Url.Action("Index")">Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Content/ClientTemplate/js/upload-img.js"></script>
    <script>
        $('#add').click(function (e) {
            var formdata = new FormData();
            var file = $("#file").get(0).files;
            if (file.length > 0) {
                formdata.append('file', file[0]);

                var modelAdd = {};
                modelAdd.Products_Id = '102';
                modelAdd.ProductName = $("#ProductName").val();
                modelAdd.Image = null;
                modelAdd.Description = $("#Description").val();
                modelAdd.AuctionTime = $("#AuctionTime").val();
                modelAdd.PriceStart = $("#PriceStart").val();
                modelAdd.StepPrice = $("#StepPrice").val();
                modelAdd.Category_Id = $("#Category_Id").val();
                modelAdd.Status = 1;
                modelAdd.User_Id = '1-10';



                var dataParam = '{' + '"model": "' + JSON.stringify(modelAdd) + '", "file": "' + JSON.stringify(formdata) + '"' + '}';
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Create", "ManagerAuction")',
                    data: dataParam,
                    contentType: "application/json; charset=utf-8",
                    dataType: "text JSON",
                    success: function (result) {
                        console.log(result)
                    },
                    error: function () {
                        alert('Error occured');
                    }
                });
            }
        })
    </script>
}