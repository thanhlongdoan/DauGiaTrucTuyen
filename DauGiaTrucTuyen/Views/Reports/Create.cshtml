@model DauGiaTrucTuyen.Areas.Admin.Models.AddReportViewModel

@{

    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<h3 class="text-center">BÁO CÁO NGƯỜI DÙNG</h3>
<br />
<div class="register">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-8 col-md-offset-2">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Title, new { @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-2">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-2">
                    @Html.LabelFor(model => model.ReportUser, htmlAttributes: new { @class = "control-label " })
                    @Html.TextBoxFor(x => x.ReportUser)
                    @Html.ValidationMessageFor(m => m.ReportUser, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-2">
                    @Html.LabelFor(model => model.Transaction_Id, htmlAttributes: new { @class = "control-label " })
                    @Html.TextBoxFor(x => x.Transaction_Id)
                    @Html.ValidationMessageFor(m => m.Transaction_Id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="sign-up form-group">
                <div class="col-md-8 col-md-offset-2">
                    <input type="submit" value="Gửi Báo Cáo" />
                </div>
            </div>

        </div>
    }

</div>

