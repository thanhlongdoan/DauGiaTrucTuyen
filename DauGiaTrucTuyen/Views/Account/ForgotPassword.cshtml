@model DauGiaTrucTuyen.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h3 class="text-center">QUÊN MẬT KHẨU</h3>
<br />
<div class="register">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-4 col-md-offset-4">
                @Html.TextBoxFor(x => x.UserName, new { @placeholder = "Tên đăng nhập", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="sign-up form-group">
            <div class="col-md-4 col-md-offset-4">
                <input type="submit" value="Xác nhận" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 col-md-offset-4">
                <a href="@Url.Action("Login","Account")">Đăng nhập</a>
                <br />
                <a href="@Url.Action("Register","Account")">Đăng ký tài khoản</a>
            </div>
        </div>
    }
</div>
