<!--Modal Login-->
<div class="modal fade" id="modal-login" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width: 70%; margin: auto">
            <div class="modal-body">
                @Html.Partial("~/Views/Account/Login.cshtml")
            </div>
        </div>
    </div>
</div>
<!--Modal Register-->
<div class="modal fade" id="modal-register" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width: 70%; margin: auto">
            <div class="bs-example bs-example-tabs">
                <ul id="myTab" class="nav nav-tabs">
                    <li class=""><a href="#buoc1" data-toggle="tab">Bước 1</a></li>
                    <li class=""><a href="#buoc2" style="pointer-events: none;" data-toggle="tab">Bước 2</a></li>
                </ul>
            </div>
            <div class="modal-body">
                <div id="myTabContent" class="tab-content">
                    @Html.Partial("~/Views/Account/Register.cshtml")
                </div>
            </div>
        </div>
    </div>
</div>
<!--Modal Forgot-->
<div class="modal fade" id="modal-forgotpassword" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width: 70%; margin: auto">
            <div class="modal-body">
                @Html.Partial("~/Views/Account/ForgotPassword.cshtml")
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!-- iCheck -->
    <script src="~/Content/Admin/plugins/iCheck/icheck.js"></script>
    <script src="~/Content/Admin/Scripts/icheck.js"></script>
    <!-- Validation -->
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(function () {
            $("#modal-register").modal("hide");
            $("#modal-forgotpassword").modal("hide");
            if ("@Request.IsAuthenticated" == "False") {
                $("#modal-login").modal("show");
            }
            else {
                $("#modal-register").modal("hide");
            }

            $(".login-box-body").on('click','#js_btnRegister', function () {
                $("#modal-forgotpassword").modal("hide");
                $("#modal-login").modal("hide");
                $("#modal-register").modal("show");
            });

            $(".login-box-body").on('click','#js_btnLogin', function () {
                $("#modal-forgotpassword").modal("hide");
                $("#modal-register").modal("hide");
                $("#modal-login").modal("show");
            });

            $(".login-box-body").on('click','#js_btnForgotPassword', function () {
                $("#modal-login").modal("hide");
                $("#modal-register").modal("hide");
                $("#modal-forgotpassword").modal("show");
            })
        })
    </script>
}
