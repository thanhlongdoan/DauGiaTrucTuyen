    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <!-- Slideshow -->
    <script type="text/javascript" src="~/Content/Client/js/jquery.flexisel.js"></script>
    <script>
        function startTimer(duration, display) {
            var timer = duration, minutes, seconds;
            setInterval(function () {
                minutes = parseInt(timer / 60, 10)
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                display.textContent = minutes + ":" + seconds;

                if (--timer < 0) {
                    timer = duration;
                }
            }, 1000);
        }
        $(document).ready(function () {
            $("#modal-register").modal("hide");
            $("#modal-forgotpassword").modal("hide");
            if ("@Request.IsAuthenticated" == "False") {
                $("#modal-login").modal("show");
            }
            else {
                $("#modal-register").modal("hide");
            }

            $(".login-box-body").on('click','#js_btnRegister', function () {
                $("#modal-forgotpassword").modal("hide");
                $("#modal-login").modal("hide");
                $("#modal-register").modal("show");
            });

            $(".login-box-body").on('click','#js_btnLogin', function () {
                $("#modal-forgotpassword").modal("hide");
                $("#modal-register").modal("hide");
                $("#modal-login").modal("show");
            });

            $(".login-box-body").on('click','#js_btnForgotPassword', function () {
                $("#modal-login").modal("hide");
                $("#modal-register").modal("hide");
                $("#modal-forgotpassword").modal("show");
            })

            //set countdown timmer
            var fiveMinutes = 60 * 0.5,
                display = document.querySelector('#time');
                display1 = document.querySelector('#time1');
                display2 = document.querySelector('#time2');
                display3 = document.querySelector('#time3');
                display4 = document.querySelector('#time4');
                display5 = document.querySelector('#time5');
                startTimer(fiveMinutes, display);
                startTimer(fiveMinutes, display1);
                startTimer(fiveMinutes, display2);
                startTimer(fiveMinutes, display3);
                startTimer(fiveMinutes, display4);
                startTimer(fiveMinutes, display5);
            //slideshow
            $("#flexiselDemo1").flexisel({
                visibleItems: 5,
                animationSpeed: 1000,
                autoPlay: true,
                autoPlaySpeed: 3000,
                pauseOnHover: true,
                enableResponsiveBreakpoints: true,
                responsiveBreakpoints: {
                    portrait: {
                        changePoint: 480,
                        visibleItems: 3
                    },
                    landscape: {
                        changePoint: 640,
                        visibleItems: 4
                    },
                    tablet: {
                        changePoint: 768,
                        visibleItems: 5
                    }
                }
            });
        })
    </script>
