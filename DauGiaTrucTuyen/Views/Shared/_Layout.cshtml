@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Client/images/img_452250.png" type="image/png" rel="shortcut icon" />
    <!--Bootstrap v.3.3.7-->
    <link href="~/Content/Admin/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- FontAwesome-->
    <link href="~/Content/Admin/bower_components/font-awesome/css/all.css" rel="stylesheet" />
    <!-- CSS-->
    <link href="~/Content/Client/css/style.css" rel="stylesheet" />
    <!-- Sweetalert  CSS-->
    <link href="~/Content/Admin/sweetalert/css/sweetalert.css" rel="stylesheet" />
    <!-- Load-page  CSS-->
    <link href="~/Content/Client/css/loadpage.css" rel="stylesheet" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/Admin/dist/css/AdminLTE.min.css">
    <!-- Upload img CSS -->
    <link href="~/Content/Client/css/upload-img.css" rel="stylesheet" />
    @RenderSection("css", required: false)

    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <!--Header-->
    <div class="header navbar-fixed-top">
        <div class="bottom-header">
            <div class="container">
                <nav class="navbar text-uppercase">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                                ĐẤU GIÁ TRỰC TUYẾN
                                @*<img src="~/Content/Client/images/l.png" class="img-responsive" />*@
                            </a>
                        </div>
                        <div id="navbar" class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li class="active"><a class="navbar-link" href="@Url.Action("Index","Home")">Trang chủ</a></li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                <li><a class="navbar-link" href="#">Báo cáo người dùng</a></li>
                                <li><a class="navbar-link" href="@Url.Action("Index","MyAuction")">Đấu giá của tôi</a></li>
                                <li><a class="navbar-link" href="@Url.Action("Index","ManagerAuction")">Quản lý đấu giá</a></li>
                                @if (Request.IsAuthenticated)
                                {
                                    <li class="dropdown">
                                        <a href="#" class="navbar-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.GetUserName() <span class="caret"></span></a>
                                        <div class="dropdown-menu menu-login">
                                            <a class="dropdown-item" href="@Url.Action("InformationUser","Account")"><i class="fas fa-user"></i> Tài khoản</a>
                                            <div class="divider"></div>
                                            <a class="dropdown-item" href="@Url.Action("LogOff", "Account")"><i class="fas fa-lock-open"></i> Đăng xuất</a>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li><a class="navbar-link" href="@Url.Action("Index","Home")">Đăng nhập</a></li>
                                }

                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!--End_Header-->
    <!--Container-->
    <div class="container">
        <div class="row content-home">
            <div class="sub-cate col-md-3 col-sm-0">
                @{Html.RenderAction("GetCategorySideBar", "Category");}
            </div>
            @RenderBody()
        </div>
    </div>
    <!--End_Container-->
    <!--Footer-->
    <div class="footer">
        <div class="footer-top">
            <div class="container">
                <div class="latter-right">
                    <p>Thông tin về chúng tôi</p>
                    <ul class="face-in-to">
                        <li><a href="#"><span> </span></a></li>
                        <li><a href="#"><span class="facebook-in"> </span></a></li>
                    </ul>
                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                @{Html.RenderAction("GetCategoryFooter", "Category");}
                <div class="footer-bottom-cate bottom-grid-cat">
                    <h6>Chính sách</h6>
                    <ul>
                        <li><a href="#">Thông tin đấu giá</a></li>
                        <li><a href="#">Thông tin bảo mật</a></li>
                        <li><a href="#">Thông tin giao dịch</a></li>
                    </ul>
                </div>
                <div class="footer-bottom-cate">
                    <h6>Liên hệ</h6>
                    <ul>
                        <li><a href="#">Liên hệ với chúng tôi</a></li>
                    </ul>
                </div>
                <div class="footer-bottom-cate cate-bottom">
                    <h6>Kết nối</h6>
                    <ul>
                        <li><a href="#">FaceBook</a> </li>
                        <li><a href="#">Google</a></li>
                        <li class="phone">SDT : 012345678</li>
                        <li class="temp">Email: daugiatructuyen@gmail.com</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--End_Footer-->

    @Scripts.Render("~/bundles/bootstrap")
    <!-- Js RealTime-Hub-->
    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <script src="~/signalr/hubs"></script>
    <!-- Sweetalert JS -->
    <script src="~/Content/Admin/sweetalert/js/sweetalert.min.js"></script>
    <!-- Scroll -->
    <script src="~/Content/Client/js/scroll.js"></script>
    @RenderSection("scripts", required: false)
    <!-- Upload img JS -->
    <script src="~/Content/Client/js/upload-img.js"></script>
    <!-- Validation Js -->
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @Scripts.Render("~/bundles/ckeditor")
</body>
</html>
